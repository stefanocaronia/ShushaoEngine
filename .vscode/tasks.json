{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "mingw32-make -j 8"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "group": "build",
            "command": "mingw32-make -j 8 BUILD=Release"
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "group": "build",
            "command": "mingw32-make -j 8 rebuild"
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "mingw32-make -j 8 run"
        },
        {
            "label": "Run",
            "type": "shell",
            "group": "test",
            "command": "bin/Debug/ShushaoGame.exe"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "mingw32-make clean"
        }
    ]
}
